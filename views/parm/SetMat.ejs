<script type="text/javascript">

    function CheckForm(){
        var _mat_name = document.getElementById("mat_name").value;
        var _mat_comm = document.getElementById("mat_comm").value;
        var _mat_first = document.getElementById("mat_first").value;
        var _mat_recom = document.getElementById("mat_recom").value;
        var _key_1 = document.getElementById("mat_cat").value;
        var _key_2 = document.getElementById("mat_cat2").value;
        var _key_3 = document.getElementById("mat_cat3").value;


        if (_mat_name==""){
            alert("과제명을 입력하세요..");
            document.getElementById("mat_name").focus();
            return false;
        }

        if (_key_1 =='0' && _key_2 == '0' && _key_3 == '0'){
            alert("카테고리를 하나 이상 입력하세요");
            document.getElementById("mat_cat").focus();
            return false;
        }

        if (_mat_comm==""){
            alert("내용을 입력하세요..");
            document.getElementById("mat_comm").focus();
            return false;
        }

        if (_mat_first==""){
            alert("최초작성자를 입력하세요..");
            document.getElementById("mat_first").focus();
            return false;
        }

        if (_mat_recom==""){
            alert("추천인을 입력하세요..");
            document.getElementById("mat_recom").focus();
            return false;
        }


        if (confirm("과제를 수정하시겠습니까? ") == true ) {
            return true ;
        }else{
            return false;
        }
    }
    function CheckCancel(){

        if (confirm("과제을 취소하시겠습니까? ") == true ) {
            history.back();
        }else{
            return false;
        }
    }
</script>
